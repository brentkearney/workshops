<div class="row invitation-box container" id="email-form">
  <div class="card">
    <div class="rsvp-card-title card-header">
      <h2>Confirm Your E-mail Address</h2>
    </div>
    <%= render 'validation_errors' %>
    <div class="card-body d-flex flex-column justify-content-center">
      <div class="p-2 flex-grow-1">
        <h1>We're glad you can attend! ğŸ‰</h1>
      </div>
      <div class="p-2">
        <p>Is this your preferred email address? If not, please change it.</p>
      </div>
      <%= form_for @email_form, as: :email_form,
         url: rsvp_email_path(@invitation.code), method: :post,
        html: { role: 'form', novalidate: 'novalidate', class: 'form' } do |email_form| %>
        <fieldset>
        <%= email_form.fields_for :person, @email_form.person do |p| %>
          <div class='p-2'>
            <%= p.email_field :email, class: "form-control text-center", autocomplete: "email" %>
          </div>
        <% end %><!-- end fields_for -->
        <div class="p-2">
          <%= submit_tag('Continue to Next Step', class: 'btn btn-lg btn-primary pull-right') %>
        </div>
        </fieldset>
      <% end %><!-- end form -->
    </div><!-- card-body -->
  </div>
</div><!-- container -->
