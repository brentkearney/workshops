<div class="row invitation-box container">
  <div class="col-md-8 col-md-offset-1">
    <%= render 'validation_errors' %>
    <div class="card card-primary" id="email-form">
      <div class="card-title">
        <span class="card-title"><h4>Confirm Your E-mail Address</h4></span>
      </div>
      <div class="card-body">
      <h1>We're glad you can attend! ğŸ‰<br />
      <small>Is this your preferred email address? If not, please change it.</small></h1>
      <%= form_for @email_form, as: :email_form,
         url: rsvp_email_path(@invitation.code), method: :post,
        html: { role: 'form', novalidate: 'novalidate', class: 'form' } do |email_form| %>
        <fieldset>
        <%= email_form.fields_for :person, @email_form.person do |p| %>
        <div class="row">
          <div class='col-md-3'></div>
          <div class='col-md-6 text-center'>
            <%= p.email_field :email, class: "form-control", autocomplete: "email" %>
          </div>
          <div class='col-md-3'></div>
        </div>
        <div class="row">
          <div class='col-md-3'></div>
          <div class='col-md-6 text-center'>
            <%= submit_tag('Continue', class: 'btn btn-lg btn-success text-center pull-right') %>
          </div>
          <div class='col-md-3'></div>
        </div>
        <% end %><!-- end fields_for -->
      <% end %><!-- end form -->
      </div><!-- card-body -->
    </div><!-- card email-form -->
  </div><!-- col-md-8 -->
</div><!-- container -->
