<div class="row invitation-box container">
  <div class="col-md-8 col-md-offset-1">
    <%= render 'validation_errors' %>
    <div class="panel panel-primary" id="yes-form">
      <div class="panel-heading">
        <span class="panel-title"><h4>Confirm Your E-mail Address</h4></span>
      </div>
      <div class="panel-body">
        <h1>We're glad you can attend! ğŸ‰<br />
        <small>First, please confirm this is your preferred email, or update it:</small></h1>
        <%= form_for @email_form, as: :email_form,
           url: rsvp_email_path(@invitation.code), method: :post,
          html: { role: 'form', novalidate: 'novalidate', class: 'form' } do |email_form| %>
        <fieldset>

        <%= email_form.fields_for :person, @email_form.person do |p| %>
        <div class="row">
          <div class='col-md-3'></div>
          <div class='col-md-6 text-center'>
            <%= p.email_field :email, class: "form-control", autocomplete: "email" %>
          </div>
          <div class='col-md-3'></div>
        </div>
        <div class="row">
          <div class='col-md-3'></div>
          <div class='col-md-6 text-center'>
            <%= submit_tag('Confirm E-mail and Continue', class: 'btn btn-lg btn-success text-center') %>
          </div>
          <div class='col-md-3'></div>
        </div>
        <% end %>
      </div><!-- panel-body -->
      <% end %>
    </div><!-- panel email-form -->
  </div><!-- col-md-8 -->
</div><!-- container -->
