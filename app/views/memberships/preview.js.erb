$(".popovers").popover('hide');

if ($(window).width() < 767) {
  window.location.href = "<%= event_membership_path(@event, @membership) %>";
} else {
  $("#popover-<%= @membership.id %>").popover({
    placement: "right",
    trigger: "click focus",
    html: true,
    container: 'article',
    content: "<%= escape_javascript(render @member_preview_template).html_safe %>"
  })
  $("#popover-<%= @membership.id %>").popover('show');
  window.setTimeout(function(){ $("#popover-<%= @membership.id %>").popover('hide'); }, 30000);
}

$(".close-button").click(function(){ $("#popover-<%= @membership.id %>").popover('hide'); });

document.addEventListener("turbolinks:before-cache", function () {
    $("#popover-<%= @membership.id %>").popover('hide');
});
