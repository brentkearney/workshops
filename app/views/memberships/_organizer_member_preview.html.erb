<div class="card p-2" id="member-preview">
  <h4 class="card-title">
    <span class="d-flex flex-row-reverse">
      <button type="button" class="btn close-button" id="x-close" aria-hidden="true">Ã—</button>
    </span>
    <%= @event.code %>: <%= @person.name %>
  </h4>
  <div class="card-body d-flex">
    <div class="p-2 flex-fill left-content">
      <p id="name"><%= @person.lastname %>, <%= @person.firstname %></p>
      <p id="affil"><%= @person.affiliation %></p>
      <% if policy(@membership).show_email_address? %>
        <p id="email"><%= mail_to @person.email %>
        <% unless @membership.share_email %>
          (not shared)
        <% end %>
        </p>
      <% end %>
      <% unless @person.url.blank? %>
        <p id="url"><%= link_to @person.uri.truncate(60), @person.uri %></p>
      <% end %>
      <% address = print_address(@person) %>
      <% unless address.blank? %>
        <p id="address"><strong>Address:</strong><br> <%= address %></p>
      <% end %>
    </div>
    <div class="p-2 flex-fill right-content">
      <p id="role"><strong>Role:</strong><i><%= @membership.role %></p></i>
      <p id="attendance"><strong>Attendance:</strong><%= @membership.attendance %></p>
      <p id="arrival"><strong>Arrives:</strong><%= @membership.arrives %></p>
      <p id="departure"><strong>Departs:</strong><%= @membership.departs %></p>
      <p id="notes"><strong>Notes:</strong><%= member_notes(@membership) %></p>
    </div>
  </div>
  <div class="d-flex flex-row-reverse updated-by">
    <% unless @membership.replied_at.blank? %>
      RSVP date: <%= @membership.rsvp_date %><br>
    <% end %>
      Person updated by <%= @membership.person.updated_by %> on <%= @membership.person.last_updated(@event) %><br>
      Membership updated by <%= @membership.updated_by %> on <%= @membership.last_updated %>
  </div>
  <div class="popover-footer d-flex mb-1">
    <span class="left-buttons p-2 mr-auto">
    <%= link_to "Profile", event_membership_path(@event, @membership),
          class: "btn btn-secondary" %>
    <%= link_to "Edit", edit_event_membership_path(@event, @membership),
          class: "btn btn-secondary" %>
    </span>
    <span class="right-buttons p-2 ml-auto popover-close">
      <button type="button" class="btn btn-primary close-button">Close</button>
    </span>
  </div>
</div>
